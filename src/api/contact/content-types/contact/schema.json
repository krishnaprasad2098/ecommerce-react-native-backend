{
  "kind": "collectionType",
  "collectionName": "contacts",
  "info": {
    "singularName": "contact",
    "pluralName": "contacts",
    "displayName": "contact",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phone_number": {
      "type": "string",
      "required": true,
      "regex": "[0-9]+",
      "maxLength": 10,
      "minLength": 10
    },
    "message": {
      "type": "text",
      "required": true
    }
  }
}
